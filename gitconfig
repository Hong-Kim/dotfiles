[push]
  default = upstream
[color]
  ui = auto
[alias]
  aa = add --all
  ci = commit -v
  cm = commit -v -m
  co = checkout
  st = status
  d = diff
  ds = diff --staged

  # Fancy logging.
  #   h = head
  #   r = recent commits, only current branch
  #   ra = recent commits, all reachable refs
  #   l = all commits, only current branch
  #   la = all commits, all reachable refs
  head = !git l -1
  h = !git head
  r = !git l -15
  ra = !git r --all
  l = "!. ~/.githelpers && pretty_git_log"
  la = !git l --all
[core]
  excludesfile = ~/.gitignore
  autocrlf = input
  editor = vim
[merge]
#   ff = only
[user]
  name = Hong Kim
  email = honki91@gmail.com
